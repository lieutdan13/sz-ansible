#!/bin/bash

#Process global xinitrc scripts
if [ -d /etc/X11/xinit/xinitrc.d ]; then
    for f in /etc/X11/xinit/xinitrc.d/*; do
        [ -x "$f" ] && . "$f"
    done
    unset f
fi


# Organize Displays
~/bin/xrandr_laptop.sh

#Activate Numlock
numlockx &

#Remap Caps Lock to Esc
setxkbmap -option caps:escape

#Start pulseaudio
#pulseaudio &

#Start i3
exec i3
