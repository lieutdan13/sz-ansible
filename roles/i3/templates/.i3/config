client.unfocused        #1C1C1C  #1C1C1C  #E8E8D3  #1C1C1C
client.urgent           #799d6a  #1C1C1C  #E8E8D3

# custom loads
assign [class="^Gvim$"] 3
assign [class="^Firefox$"] 4

# execute
exec_always {{ ansible_env.HOME }}/.i3/battery-indicator
